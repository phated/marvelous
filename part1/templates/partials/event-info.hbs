<div id="main">
  <div class="row">
    {{#with event}}
    <div class="col-md-5 col-lg-4">
      <img src="{{image}}" class="img-rounded img-responsive" />
    </div>

    <div class="col-md-7 col-lg-8">
      <h1>{{title}}</h1>
      <p>{{description}}</p>
    </div>
    {{/with}}
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2>Which Comics?</h2>
    </div>
    <div class="col-lg-12">
      {{#eachRow comics 4}}
        <div class="col-md-3">
          {{> comicThumbnail}}
        </div>
      {{/eachRow}}
    </div>
  </div>
</div>
